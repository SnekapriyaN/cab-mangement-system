<style>
     table,
    th,
    td {
        border: 0px;
        padding: 10px;
        border-collapse: collapse;
        border-radius: 5px;
        background-color:white;
    }
    
      body {
        background-image: url('https://images.pexels.com/photos/14073017/pexels-photo-14073017.jpeg?auto=compress&cs=tinysrgb&w=600');
        background-size: cover;
      }
</style>
<center>
<h1 style=" color:rgb(242, 251, 251);">BOOKING DETAILS</h1>

<div class="container">
    <a href="/ride" class="btn btn-primary"> FOR BOOKING </a>
    <table class="table table-striped mt-4">
       
        <tr>
            <th>Id</th>
            <th>PICK UP</th>
            <th>DROP</th>
            <th>DATE</th>
            <th>TIME</th>
           
        </tr></center>
        {{#each data}}
        <tr>
            <td>{{this.dataValues.id}}</td>
            <td>{{this.dataValues.Pickup}}</td>
            <td>{{this.dataValues.Drop}}</td>
            <td>{{this.dataValues.Date}}</td>
            <td>{{this.dataValues.Time}}</td>
          
            <td>
                <a href="/edit/{{this.dataValues.id}}">Edit</a> |
                <a href="/delete/{{this.dataValues.id}}" class="text-danger" onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
    </table>
 
</div>